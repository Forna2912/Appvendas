<AdicionarVendas>
    FloatLayout:
        # Geral
        canvas:
            Rectangle:
                size:self.size
                pos:self.pos
                source:'icones/bg1.png'

        #selecionar cliente
        Label:
            text:'Selecione Cliente'
            pos_hint:{'right':1,'top':1}
            size_hint:1,0.05
            id:selecionar_cliente
        ScrollView:
            size_hint:1,0.15
            pos_hint:{'right':1,'top':0.95}
            GridLayout:
                rows:1
                id:lista_clientes
                size_hint_x: None
                col_default_width:"100dp"
                width:self.minimum_width
                col_force_default:True

        # selecionar produto
        Label:
            text:'Selecione produto'
            pos_hint:{'right':1,'top':0.75}
            size_hint:1,0.05
            id:selecionar_produto
        ScrollView:
            size_hint:1,0.15
            pos_hint:{'right':1,'top':0.7}
            GridLayout:
                rows:1
                id:lista_produtos
                size_hint_x: None
                col_default_width:"100dp"
                width:self.minimum_width
                col_force_default:True
        Label:
            id:data 
            pos_hint: {'right':1,'top': 0.5}
            size_hint: 1, 0.05
            bold:True
            text:"DATA"

        #selecionar unidade
        GridLayout:
            rows:1
            pos_hint: {'right':0.9,'top': 0.45}
            size_hint: 0.8, 0.1
            LabelButton:
                text: 'Kg'
                id: Kg
                on_release:app.selecionar_unidade('Kg')
            LabelButton:
                text: 'Unidades'
                id: unidades
                on_release:app.selecionar_unidade('unidades')
            LabelButton:
                text: 'Litros'
                id: litros
                on_release:app.selecionar_unidade('litros')
        #Botoes
        LabelButton:
            canvas.before:
                Rectangle:
                    size:self.size
                    pos:self.pos
                    source:'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png'
            text:'Cancelar'
            pos_hint:{'right':0.45,'top':0.2}
            size_hint:0.4,0.2
            on_release:app.mudar_pagina('homepage')

        LabelButton:
            canvas.before:
                Rectangle:
                    size:self.size
                    pos:self.pos
                    source:'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png'
            text:'Adicionar venda'  
            pos_hint:{'right':0.95,'top':0.2}
            size_hint:0.4,0.2
            on_release: app.adicionar_venda()

        #preço total
        GridLayout:
            rows:1
            pos_hint: {'right':0.9,'top': 0.355}
            size_hint: 0.8, 0.075
            Label:
                text:'Preço total R$'
                id: preco_total_label
            TextInput:
                id: preco_total
                hint_text: 'Digite apenas números'

        #quantidade
        GridLayout:
            rows:1
            pos_hint: {'right':0.9,'top': 0.275}
            size_hint: 0.8, 0.075
            Label:
                text:'Quantidade total'
                id: quantidade_total_label
            TextInput:
                id: quantidade
                hint_text: '0'

        