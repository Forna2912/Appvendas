<AcompanharVendedor>
    FloatLayout:
        # Geral
        canvas:
            Rectangle:
                size:self.size
                pos:self.pos
                source:'icones/bg1.png'
        Label:
            text:'Insira o [color=#00CFDB]ID de outro vendedor[/color] para acompanha-lo'
            pos_hint:{'right':0.9,'top':0.8}
            size_hint:0.8,0.1
            bold:True
            id:id_vendedor
            markup:True
        LabelButton:
            canvas.before:
                Rectangle:
                    size:self.size
                    pos:self.pos
                    source:'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png'
            text:'Adicionar Vendedor'  
            pos_hint:{'right':0.9,'top':0.55}
            size_hint:0.8,0.2
            on_release: app.adicionarvendedor(input_id_outrovendedor.text)
        TextInput:
            hint_text: '1 2 3'
            pos_hint: {'right': 0.9,'top': 0.7}
            size_hint: 0.8, 0.1
            id:input_id_outrovendedor
        Label:
            text: ""
            markup:True
            bold:True
            id:mensagem_outrovendedor
            pos_hint: {'right': 0.9,'top': 0.4}
            size_hint: 0.8, 0.1
        
        
        #Barra inferior
        FloatLayout:
            pos_hint: {'right':1 , 'top': 0.12}
            size_hint: 1,0.12 
            canvas:
                Color:
                    rgb:(0, 0.556, 0.611)
                Rectangle:
                    pos:self.pos
                    size:self.size
            ImageButton:
                pos_hint:{'right':0.33,'top':1}
                size_hint:0.33,1
                on_release:app.mudar_pagina('ajustespage');root.ids.mensagem_outrovendedor.text='';root.ids.input_id_outrovendedor.text=''
                source:'icones/voltar.png'