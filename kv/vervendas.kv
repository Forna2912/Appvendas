<VerVendas>
    FloatLayout:
        # Geral
        canvas:
            Rectangle:
                size:self.size
                pos:self.pos
                source:'icones/bg1.png'
        Label:
            canvas.before:
                Rectangle:
                    size:self.size
                    pos:self.pos
                    source:'icones/botao.png'
            text:'total de vendas'
            pos_hint:{'right':0.85,'top':0.95}
            size_hint:0.7,0.2
            id:total_vendas
            markup:True


        #Meio
        ScrollView:
            size_hint:1,0.63
            pos_hint:{'right':1,'top':0.75}
            GridLayout:
                cols:1
                id:lista_vendas
                size_hint_y: None
                row_default_height:"90dp"
                height:self.minimum_height
                row_force_default:True
                spacing:2,2



        #Barra inferior
        FloatLayout:
            pos_hint: {'right':1 , 'top': 0.12}
            size_hint: 1,0.12 
            canvas:
                Color:
                    rgb:(0, 0.556, 0.611)
                Rectangle:
                    pos:self.pos
                    size:self.size
            ImageButton:
                pos_hint:{'right':0.33,'top':1}
                size_hint:0.33,1
                on_release:app.sair_todasvendas('ajustespage')
                source:'icones/voltar.png'